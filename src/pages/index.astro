---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      body {
        background: #f4f4f4;
        font-family: "Arial", sans-serif;
        margin: 0;
        padding: 0;
      }
      main {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        text-align: center;
      }
      .profile {
        margin-bottom: 20px;
      }
      .profile img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
      }
      .links {
        display: flex;
        flex-direction: column;
        gap: 10px;
      }
      .link-card {
        background: #fff;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        text-decoration: none;
        color: #333;
        transition: transform 0.2s;
      }
      .link-card:hover {
        transform: translateY(-5px);
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <div class="profile">
        <img src="/profile.jpg" alt="Kirori" />
        <h1>Kirori</h1>
        <p>前端开发者 | 技术爱好者</p>
      </div>
      <div class="links">
        <a href="/blog" class="link-card">📚 博客</a>
        <a href="/projects" class="link-card">💻 项目</a>
        <a href="https://github.com/kirori" class="link-card">🐙 GitHub</a>
        <a href="mailto:kirori@example.com" class="link-card">📧 联系我</a>
      </div>
    </main>
    <Footer />
  </body>
</html>
